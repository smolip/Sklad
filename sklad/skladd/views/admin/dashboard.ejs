<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <title>Admin dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

<div class="max-w-6xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">
        Admin dashboard
    </h1>

    <!-- STATISTIKY -->
    <div class="grid grid-cols-2 gap-6 mb-8">
        <div class="bg-white p-4 rounded shadow">
            <p class="text-gray-500">Počet uživatelů</p>
            <p class="text-2xl font-bold"><%= users.length %></p>
        </div>

        <div class="bg-white p-4 rounded shadow">
            <p class="text-gray-500">Počet produktů</p>
            <p class="text-2xl font-bold"><%= productCount %></p>
        </div>
    </div>

    <!-- UŽIVATELÉ -->
    <div class="bg-white rounded shadow">
        <table class="w-full text-left">
            <thead class="bg-gray-200">
                <tr>
                    <th class="p-3">Uživatel</th>
                    <th class="p-3">Role</th>
                    <th class="p-3">Akce</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(u => { %>
                    <tr class="border-t">
                        <td class="p-3">
                            <%= u.username %>
                            <% if (u._id.toString() === user.id) { %>
                                <span class="text-xs text-gray-500">(ty)</span>
                            <% } %>
                        </td>

                        <td class="p-3">
                            <% if (u._id.toString() !== user.id) { %>
                                <form method="POST"
                                      action="/admin/users/<%= u._id %>/role">
                                    <select name="role"
                                            onchange="this.form.submit()"
                                            class="border rounded px-2 py-1">
                                        <option value="worker"
                                            <%= u.role === "worker" ? "selected" : "" %>>
                                            worker
                                        </option>
                                        <option value="admin"
                                            <%= u.role === "admin" ? "selected" : "" %>>
                                            admin
                                        </option>
                                    </select>
                                </form>
                            <% } else { %>
                                <span class="font-semibold"><%= u.role %></span>
                            <% } %>
                        </td>

                        <td class="p-3">
                            <% if (u._id.toString() !== user.id) { %>
                                <form method="POST"
                                      action="/admin/users/<%= u._id %>/delete">
                                    <button
                                        class="text-red-600 hover:underline">
                                        Smazat
                                    </button>
                                </form>
                            <% } else { %>
                                —
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <div class="bg-white p-8 rounded shadow w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-center">
        Nový uživatel
    </h1>

    <% if (typeof error !== "undefined") { %>
        <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
            <%= error %>
        </div>
    <% } %>

    <form method="POST" action="/admin/user/new" class="space-y-4">
        <div>
            <label class="block mb-1 font-medium">Uživatelské jméno</label>
            <input
                name="username"
                required
                class="w-full border rounded px-3 py-2"
            >
        </div>

        <div>
            <label class="block mb-1 font-medium">Heslo</label>
            <input
                type="password"
                name="password"
                required
                class="w-full border rounded px-3 py-2"
            >
        </div>

        <div>
            <label class="block mb-1 font-medium">Role</label>
            <select
                name="role"
                class="w-full border rounded px-3 py-2"
            >
                <option value="worker">Skladník</option>
                <option value="admin">Admin</option>
            </select>
        </div>

        <button class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">
            Vytvořit uživatele
        </button>
    </form>
</div>

    <div class="mt-6">
        <a href="/dashboard"
           class="text-blue-600 hover:underline">
            ← Zpět do skladu
        </a>
    </div>
</div>

</body>
</html>
