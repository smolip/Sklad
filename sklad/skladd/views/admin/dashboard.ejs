<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <title>Admin dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

<div class="max-w-7xl mx-auto p-8 space-y-10">

    <!-- HLAVIČKA -->
    <header class="flex justify-between items-center">
        <h1 class="text-4xl font-bold">
            Admin dashboard
        </h1>

        <a href="/dashboard"
           class="text-blue-600 hover:underline text-sm">
            ← Zpět do skladu
        </a>
    </header>

    <!-- STATISTIKY -->
    <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white p-6 rounded-xl shadow-sm">
            <p class="text-gray-500 text-sm mb-1">Počet uživatelů</p>
            <p class="text-3xl font-bold"><%= users.length %></p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-sm">
            <p class="text-gray-500 text-sm mb-1">Počet produktů</p>
            <p class="text-3xl font-bold"><%= productCount %></p>
        </div>
    </section>

    <!-- HLAVNÍ OBSAH -->
    <section class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- UŽIVATELÉ (2/3) -->
        <div class="lg:col-span-2 bg-white rounded-xl shadow-sm overflow-hidden">
            <div class="p-6 border-b">
                <h2 class="text-2xl font-semibold">
                    Uživatelé
                </h2>
            </div>

            <table class="w-full text-left">
                <thead class="bg-gray-100 text-sm uppercase text-gray-600">
                    <tr>
                        <th class="p-4">Uživatel</th>
                        <th class="p-4">Role</th>
                        <th class="p-4 text-right">Akce</th>
                    </tr>
                </thead>

                <tbody>
                    <% users.forEach(u => { %>
                        <tr class="border-t hover:bg-gray-50">
                            <td class="p-4">
                                <%= u.username %>
                                <% if (u._id.toString() === user.id) { %>
                                    <span class="ml-2 text-xs text-gray-500">(ty)</span>
                                <% } %>
                            </td>

                            <td class="p-4">
                                <% if (u._id.toString() !== user.id) { %>
                                    <form method="POST"
                                          action="/admin/users/<%= u._id %>/role">
                                        <select name="role"
                                                onchange="this.form.submit()"
                                                class="border rounded-lg px-3 py-1 text-sm">
                                            <option value="Skladník"
                                                <%= u.role === "Skladník" ? "selected" : "" %>>
                                                Skladník
                                            </option>
                                            <option value="Admin"
                                                <%= u.role === "Admin" ? "selected" : "" %>>
                                                Admin
                                            </option>
                                        </select>
                                    </form>
                                <% } else { %>
                                    <span class="font-semibold text-gray-700">
                                        <%= u.role %>
                                    </span>
                                <% } %>
                            </td>

                            <td class="p-4 text-right">
                                <% if (u._id.toString() !== user.id) { %>
                                    <form method="POST"
                                          action="/admin/users/<%= u._id %>/delete">
                                        <button
                                            class="text-red-600 hover:text-red-800 text-sm font-medium">
                                            Smazat
                                        </button>
                                    </form>
                                <% } else { %>
                                    <span class="text-gray-400">—</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- NOVÝ UŽIVATEL (1/3) -->
        <div class="bg-white p-8 rounded-xl shadow-sm">
            <h2 class="text-2xl font-semibold mb-6">
                Nový uživatel
            </h2>

            <% if (typeof error !== "undefined") { %>
                <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
                    <%= error %>
                </div>
            <% } %>

            <form method="POST" action="/admin/user/new" class="space-y-5">
                <div>
                    <label class="block mb-1 text-sm font-medium">
                        Uživatelské jméno
                    </label>
                    <input
                        name="username"
                        required
                        class="w-full border rounded-lg px-3 py-2"
                    >
                </div>

                <div>
                    <label class="block mb-1 text-sm font-medium">
                        Heslo
                    </label>
                    <input
                        type="password"
                        name="password"
                        required
                        class="w-full border rounded-lg px-3 py-2"
                    >
                </div>

                <div>
                    <label class="block mb-1 text-sm font-medium">
                        Role
                    </label>
                    <select
                        name="role"
                        class="w-full border rounded-lg px-3 py-2"
                    >
                        <option value="worker">Skladník</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>

                <button
                    class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 font-medium">
                    Vytvořit uživatele
                </button>
            </form>
        </div>

    </section>
    <section class="bg-white rounded-xl shadow-sm">
    <div class="p-6 border-b">
        <h2 class="text-2xl font-semibold">
            Historie změn skladu
        </h2>
    </div>

    <table class="w-full text-left text-sm">
        <thead class="bg-gray-100">
            <tr>
                <th class="p-4">Kdy</th>
                <th class="p-4">Uživatel</th>
                <th class="p-4">Akce</th>
                <th class="p-4">Produkt</th>
                <th class="p-4">Změna</th>
            </tr>
        </thead>
        <tbody>
            <% logs.forEach(l => { %>
                <tr class="border-t">
                    <td class="p-4">
                        <%= l.createdAt.toLocaleString() %>
                    </td>
                    <td class="p-4">
                        <%= l.user.username %> (<%= l.user.role %>)
                    </td>
                    <td class="p-4">
                        <%= l.action %>
                    </td>
                    <td class="p-4">
                        <%= l.product.name %>
                    </td>
                    <td class="p-4">
                        <%= l.previousQuantity %>
                        →
                        <%= l.newQuantity %>
                        (
                        <%= 
                            l.action === "Přidat" || l.action === "Vytvořit"
                                ? "+" + l.quantity
                                : "-" + l.quantity
                        %>
                        )
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</section>

<form method="POST" action="/admin/movements/reset"
      onsubmit="return confirm('Opravdu smazat celou historii pohybů?');">
    <button class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
        Vymazat historii
    </button>
</form>

</div>

</body>
</html>
