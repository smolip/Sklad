<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <title>Skladový systém</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

<div class="max-w-4xl mx-auto p-6">

    <!-- HLAVIČKA + LOGOUT -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold">Sklad</h1>
            <p class="text-gray-600">
                Přihlášen jako
                <strong><%= user.username %></strong>
                (<%= user.role %>)
            </p>

            <% if (user.role === "admin") { %>
                <a href="/admin/dashboard"
                   class="text-blue-600 hover:underline">
                    Admin dashboard
                </a>
            <% } %>
        </div>

        <form method="POST" action="/logout">
            <button
                class="bg-gray-800 text-white px-4 py-2 rounded hover:bg-gray-900"
            >
                Logout
            </button>
        </form>
    </div>

    <!-- FORMULÁŘ NA PŘIDÁNÍ PRODUKTU -->
    <div class="bg-white p-4 rounded shadow mb-6">
        <h2 class="text-xl font-semibold mb-4">Přidat položku</h2>

        <form method="POST" action="/dashboard/add" class="flex gap-4">
            <input
                name="name"
                placeholder="Název produktu"
                required
                class="border rounded px-3 py-2 w-full"
            >

            <input
                name="quantity"
                type="number"
                min="0"
                placeholder="Počet"
                required
                class="border rounded px-3 py-2 w-32"
            >

            <button
                class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
            >
                Přidat
            </button>
        </form>
    </div>

    <!-- SEZNAM PRODUKTŮ -->
    <div class="bg-white rounded shadow">
        <table class="w-full text-left">
            <thead class="bg-gray-200">
                <tr>
                    <th class="p-3">Název</th>
                    <th class="p-3">Počet</th>
                    <th class="p-3">Akce</th>
                </tr>
            </thead>
            <tbody>
                <% if (products.length === 0) { %>
                    <tr>
                        <td colspan="3"
                            class="p-3 text-center text-gray-500">
                            Žádné produkty na skladě.
                        </td>
                    </tr>
                <% } %>

                <% products.forEach(p => { %>
                    <tr class="border-t">
                        <td class="p-3"><%= p.name %></td>

                        <td class="p-3">
                            <% if (p.quantity < 5) { %>
                                <span class="text-red-600 font-bold">
                                    <%= p.quantity %>
                                </span>
                            <% } else { %>
                                <%= p.quantity %>
                            <% } %>
                        </td>

                        <td class="p-3">
                            <% if (user.role === "admin") { %>
                                <form method="POST"
                                      action="/dashboard/delete/<%= p._id %>">
                                    <button
                                        class="text-red-600 hover:underline">
                                        Smazat
                                    </button>
                                </form>
                            <% } else { %>
                                <span class="text-gray-400">—</span>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</div>

</body>
</html>
